export DISPLAY=:0
export XDG_RUNTIME_DIR=$TMPDIR

if [[ -v TERMUX_VERSION ]];
then
    X11_SCRIPTS="$HOME/termux-utils/x11/for_termux"
    export PATH=$PATH:$X11_SCRIPTS
fi

export X11_ENV_LOADED=1

echo "Loaded X11 environment."
echo "You can now start a desktop or a X11 app."
echo ""


if [[ -f "$HOME/.3d_env" ]] && ! [[ -v DISABLE_3D ]];
then
    source "$HOME/.3d_env"
fi


if [[ -f "$HOME/.audio_env" ]] ! [[ -v DISABLE_AUDIO ]];
then
    source "$HOME/.audio_env"
fi
